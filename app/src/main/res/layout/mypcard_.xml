<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bean"
            type="com.tech.sonet.data.model.GetMyCardApiResponse.GetMyCardApiResponseData" />

        <variable
            name="vm"
            type="com.tech.sonet.ui.addcard.MypCardActivityVM" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/header"
                layout="@layout/header" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/card_image"
                loadImage="@{bean.post_image}"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize5Percent" />

            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:onClick="@{(v)->vm.onClick(v)}"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/edit_icon"
                app:layout_constraintBottom_toBottomOf="@id/card_image"
                app:layout_constraintEnd_toEndOf="@+id/card_image" />
            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/onlinetext_background"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/card_image"
                app:layout_constraintTop_toTopOf="@id/card_image">

                <TextView
                    android:id="@+id/text_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/orkney_regular"
                    android:text="Online"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/toggleBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_80sdp"
                    android:onClick="@{(v)->vm.onClick(v)}"
                    android:checked="true"
                    checkOnLine="@{bean.isOnline}"
                    app:thumbTint="@color/toogle_btn"
                    app:track="@drawable/switch_button_background" />

            </LinearLayout>

            <EditText
                android:id="@+id/text_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/title_name_background"
                android:fontFamily="@font/orkney_medium"
                android:hint="Name or nickname "
                android:padding="@dimen/_8sdp"
                android:singleLine="true"
                android:text="@{bean.title}"
                android:textColorHint="@color/brown"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/card_image"
                app:layout_constraintTop_toBottomOf="@id/line1" />

            <TextView
                android:id="@+id/level_choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/title_name_background"
                android:fontFamily="@font/orkney_regular"
                android:hint="Straight Male"
                android:onClick="@{(v)->vm.onClick(v)}"
                android:padding="@dimen/_9sdp"
                android:text="@{bean.levelDetail.level}"
                android:textColor="@color/black"
                android:textColorHint="@color/brown"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_title" />

            <ImageView
                android:id="@+id/down_arrow"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:onClick="@{(v)->vm.onClick(v)}"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/downarro"
                app:layout_constraintBottom_toBottomOf="@id/level_choice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/level_choice" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:background="@drawable/title_name_background"
                android:fontFamily="@font/orkney_regular"
                android:gravity="top"
                android:hint="describe Yourself..."
                android:maxLength="150"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:text="@{bean.description}"
                android:textColorHint="@color/brown"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/level_choice" />

            <TextView
                android:id="@+id/textNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:fontFamily="@font/orkney_regular"
                android:text="0/150"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="@id/et_description"
                app:layout_constraintEnd_toEndOf="@id/et_description" />

            <TextView
                android:id="@+id/category_choice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/title_name_background"
                android:fontFamily="@font/orkney_regular"
                android:hint="Casual Connection"
                android:onClick="@{(v)->vm.onClick(v)}"
                android:padding="@dimen/_9sdp"
                android:textColorHint="@color/brown"
                android:text="@{bean.categoryDetail.category_name}"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="@id/et_description"
                app:layout_constraintStart_toStartOf="@id/et_description"
                app:layout_constraintTop_toBottomOf="@id/et_description" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/categoryPic"
                loadImageFirst="@{bean.categoryDetail.category_image}"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/asa"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@id/category_choice"
                app:layout_constraintRight_toLeftOf="@id/down_arrow1"
                app:layout_constraintTop_toTopOf="@id/category_choice" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/down_arrow1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:onClick="@{(v)->vm.onClick(v)}"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/downarro"
                app:layout_constraintBottom_toBottomOf="@id/category_choice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/category_choice" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/title_name_background"
                android:fontFamily="@font/orkney_regular"
                android:inputType="text"
                android:hint="@string/optional_preferred_messenger_id"
                android:padding="@dimen/_9sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/brown"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/category_choice" />

            <EditText
                android:id="@+id/social_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/title_name_background"
                android:fontFamily="@font/orkney_regular"
                android:hint="Optional: Social Media ID -
@username, other"
                android:padding="@dimen/_9sdp"
                android:singleLine="true"
                android:text='@{bean.social_media}'
                android:textColorHint="@color/brown"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phone" />

            <TextView
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/gradient_background"
                android:fontFamily="@font/orkney_regular"
                android:gravity="center"
                android:onClick="@{(v)->vm.onClick(v)}"
                android:padding="@dimen/_9sdp"
                android:paddingStart="@dimen/_25sdp"
                android:paddingEnd="@dimen/_25sdp"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/social_media" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>