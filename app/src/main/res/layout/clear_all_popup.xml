<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="callback"
            type="com.tech.sonet.ui.base.BaseCustomDialog.Listener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_15sdp">

                <TextView
                    android:id="@+id/title"
                    style="@style/TextView.Semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SONET"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tvHeading"
                    style="@style/TextView.Semibold"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/removing_profile_s_will_erase_all_history_including_likes_matches_and_not_matched_statuses_from_the_database_users_who_have_already_interacted_with_you_will_not_be_able_to_do_so_again"
                    android:textColor="@color/black"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_15ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title" />

                <View
                    android:id="@+id/viewHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="0.7dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/text_grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvHeading" />


                <View
                    android:id="@+id/viewVertical"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@color/text_grey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/viewHorizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvHeading">

                    <TextView
                        android:id="@+id/clearAll"
                        style="@style/TextView.Regular"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="@{(v)->callback.onViewClick(v)}"
                        android:padding="@dimen/_8sdp"
                        android:text="Yes"
                        android:textColor="#FD2E2E"
                        android:textSize="@dimen/_16ssp"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/clearNo"
                        style="@style/TextView.Regular"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="@{(v)->callback.onViewClick(v)}"
                        android:padding="@dimen/_8sdp"
                        android:text="No"
                        android:textColor="#B6B6B6"
                        android:textSize="@dimen/_16ssp"
                        app:layout_constraintEnd_toEndOf="parent" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>