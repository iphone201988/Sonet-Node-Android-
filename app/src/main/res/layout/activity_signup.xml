<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.tech.sonet.ui.signup.SignUpViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/_20sdp">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/innerCl"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/back_arrow1"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:onClick="@{(v)->vm.onClick(v)}"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/baseline_arrow_back_ios_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/Image" />

                <ImageView
                    android:id="@+id/Image"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:src="@drawable/color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/orkney_bold"
                    android:text="@string/be_part_of_community"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Image" />

                <TextView
                    android:id="@+id/textvw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/orkney_regular"
                    android:gravity="center"
                    android:text="@string/here_should_be_description_about_this_title_maybe_2_lines"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textview" />

                <EditText
                    android:id="@+id/etDisplayName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/btm_nav_drawable"
                    android:fontFamily="@font/orkney_regular"
                    android:hint="Display name"
                    android:paddingStart="@dimen/_12sdp"
                    android:singleLine="true"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textvw" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/btm_nav_drawable"
                    android:fontFamily="@font/orkney_regular"
                    android:hint="Email"
                    android:paddingStart="@dimen/_12sdp"
                    android:singleLine="true"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etDisplayName" />


                <EditText
                    android:id="@+id/etMessangerId"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/btm_nav_drawable"
                    android:fontFamily="@font/orkney_regular"
                    android:hint="@string/optional_preferred_messenger_id"
                    android:inputType="text"
                    android:paddingStart="@dimen/_12sdp"
                    android:singleLine="true"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintTop_toBottomOf="@id/etEmail"
                    app:layout_constraintStart_toStartOf="@id/etEmail"
                    app:layout_constraintEnd_toEndOf="@id/etEmail"/>

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/btm_nav_drawable"
                    android:fontFamily="@font/orkney_regular"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_12sdp"
                    android:singleLine="true"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etMessangerId" />

                <EditText
                    android:id="@+id/etCfPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/btm_nav_drawable"
                    android:fontFamily="@font/orkney_regular"
                    android:hint="Repeat Password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_12sdp"
                    android:singleLine="true"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etPassword" />

                <TextView
                    android:id="@+id/btnsignUp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/gradient_background"
                    android:fontFamily="@font/orkney_regular"
                    android:gravity="center"
                    android:onClick="@{(v)->vm.onClick(v)}"
                    android:text="@string/sign_up"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etCfPassword" />

                <TextView
                    android:id="@+id/tvlogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/gradient_stroke"
                    android:fontFamily="@font/orkney_regular"
                    android:gravity="center"
                    android:onClick="@{(v)->vm.onClick(v)}"
                    android:text="@string/login"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnsignUp" />
            </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</layout>