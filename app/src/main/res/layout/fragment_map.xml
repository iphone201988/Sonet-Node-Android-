<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.tech.sonet.ui.map.MapFragmentVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/orkney_bold"
            android:text="@string/map"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvFilterBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_by"
            android:textSize="@dimen/_10ssp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textColor="@color/black_100"
            android:fontFamily="@font/orkney_regular"
            app:layout_constraintEnd_toStartOf="@id/selectFilter"
            app:layout_constraintBottom_toBottomOf="@id/map"
            app:layout_constraintTop_toTopOf="@id/map"/>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/selectFilter"
            android:background="@drawable/bg_edit_text"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_20sdp"
            android:textSize="@dimen/_10ssp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:focusable="false"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/all"
            android:onClick="@{(v)->vm.onClick(v)}"
            android:layout_marginEnd="@dimen/_25sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvFilterBy"
            app:layout_constraintBottom_toBottomOf="@id/tvFilterBy"/>

        <ImageView
            android:layout_width="@dimen/_12ssp"
            android:layout_height="@dimen/_12ssp"
            android:src="@drawable/iv_drop_down"
            android:layout_marginEnd="@dimen/_3sdp"
            app:layout_constraintEnd_toEndOf="@id/selectFilter"
            app:layout_constraintTop_toTopOf="@id/selectFilter"
            app:layout_constraintBottom_toBottomOf="@id/selectFilter"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filterView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:itemCount="4"
            android:elevation="@dimen/_10sdp"
            android:visibility="gone"
            tools:listitem="@layout/item_layout_filter"
            app:layout_constraintTop_toBottomOf="@id/selectFilter"
            app:layout_constraintStart_toStartOf="@id/selectFilter"
            app:layout_constraintEnd_toEndOf="@id/selectFilter"/>

        <fragment
            android:id="@+id/google_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            app:layout_constraintBottom_toTopOf="@id/update"
            app:layout_constraintTop_toBottomOf="@id/map" />

        <TextView
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/gradient_background"
            android:fontFamily="@font/orkney_regular"
            android:gravity="center"
            android:onClick="@{(v)->vm.onClick(v)}"
            android:padding="@dimen/_7sdp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:text="@string/update"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/google_map" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>